<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BillClientFragment"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_person_focused"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="SELECT CLIENT"
        android:fontFamily="@font/khand_bold"
        android:textSize="32sp"
        android:textColor="@color/main_color"
        android:layout_marginBottom="16dp"/>
    <ProgressBar
        android:id="@+id/pb_bill_clients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_clients_title"
        android:indeterminateTint="@color/main_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        >

        <AutoCompleteTextView
            android:id="@+id/actv_bill_client_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_bg"
            android:layout_weight="4"
            android:padding="16dp"
            android:hint="Type a client name"
            android:singleLine="true"/>

    </LinearLayout>

</LinearLayout>